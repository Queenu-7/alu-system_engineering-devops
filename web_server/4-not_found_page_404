#!/usr/bin/env bash
# 4-not_found_page_404: Configure a custom 404 page for Nginx

# Variables
NGINX_CONF="/etc/nginx/sites-available/default"
CUSTOM_404_PAGE="/var/www/html/404.html"

# 1. Update package lists and install Nginx if needed
sudo apt-get update -y
if ! command -v nginx &> /dev/null; then
    sudo apt-get install -y nginx
fi

# 2. Create a custom 404 page
echo "Ceci n'est pas une page" | sudo tee $CUSTOM_404_PAGE > /dev/null

# 3. Backup original Nginx config if not backed up yet
if [ ! -f "${NGINX_CONF}.bak" ]; then
    sudo cp "$NGINX_CONF" "${NGINX_CONF}.bak"
fi

# 4. Add custom 404 page configuration inside the server block
# Check if the error_page directive is already present
if ! grep -q "error_page 404" "$NGINX_CONF"; then
    sudo sed -i "/server_name _;/a \\
    error_page 404 /404.html;\\
    location = /404.html {\\
        root /var/www/html;\\
        internal;\\
    }" "$NGINX_CONF"
fi

# 5. Test Nginx configuration
sudo nginx -t

# 6. Restart Nginx
sudo service nginx restart

# Optional sanity check: make sure 404 page works
# curl -s http://localhost/doesnotexist
